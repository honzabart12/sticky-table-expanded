{
  "name": "sticky-table",
  "version": "1.0.0",
  "description": "A tiny pure JavaScript sticky table.",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "start": "rollup -cw",
    "build": "rollup -c",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d demo",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --cache --fix",
    "format": "prettier ./src --write --ignore-unknown",
    "test": "jest ./tests",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run format",
      "npm run test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhitkovkostya/sticky-table.git"
  },
  "keywords": [],
  "author": "Konstantin Zhitkov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhitkovkostya/sticky-table/issues"
  },
  "homepage": "https://zhitkovkostya.github.io/sticky-table",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel": "^6.23.0",
    "eslint": "^8.7.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-prettier": "^2.2.2",
    "rollup-plugin-uglify": "^6.0.4",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
